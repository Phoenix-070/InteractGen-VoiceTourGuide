{
  "manifest_version": 3,
  "name": "Voice Navigation Assistant",
  "version": "1.0.0",
  "description": "A lightweight voice-guided navigation assistant for all websites",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["voiceAssistant.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

